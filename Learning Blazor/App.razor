@page "/"
@using System.Net.Http
@inject HttpClient httpClient

<h1>Blazor App</h1>

<button class="btn btn-primary" @onclick="ExecutePythonFunction">Execute Python Function</button>

@code {
    private async Task ExecutePythonFunction()
    {
        var response = await httpClient.PostAsync("https://<your-cloud-run-url>", null);
        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadAsStringAsync();
            // Do something with the result
        }
    }
}
